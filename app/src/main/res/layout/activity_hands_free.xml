<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/yenibackgroun"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HandsFree">



    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="34dp"

        android:src="@drawable/ic_mic_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_speech_to_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/konusmak_icin_dokun"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/iv_mic"
        app:layout_constraintStart_toEndOf="@id/iv_mic"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        app:cardCornerRadius="8dp"
        android:paddingTop="20dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_mic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black"

            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/songTitleTextView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şarkı Adı"
                android:textColor="@color/purple_200"
                android:textSize="26sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_back"
                    android:background="@color/black"
                    android:contentDescription="Description of the icon"/>

                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="48dp"
                    android:background="@color/black"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play"/>

                <ImageButton
                    android:id="@+id/pauseButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_pause"
                    android:background="@color/black"
                    android:contentDescription="Description of the icon"/>

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="48dp"
                    android:background="@color/black"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_next"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/secondCardView"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    app:cardCornerRadius="8dp"
    android:background="@color/black"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/firstCardView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:id="@+id/aaaa"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstCardView"
        android:gravity="left">


        <ImageView
            android:id="@+id/imageViewGif"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:visibility="gone" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
       >

        <TextView
                android:id="@+id/textHavaDurumuBilgisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/sena"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstCardView" />
            <TextView
                android:id="@+id/textHavaDurumuBilgisi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/teal_700"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstCardView" />
        <TextView
            android:id="@+id/textHavaDurumuBilgisi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/teal_700"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstCardView" />

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/thirdCardView"
        android:layout_width="270dp"
        android:layout_height="159dp"
        android:background="@android:color/transparent"
        android:paddingLeft="235dp"
        android:paddingRight="235dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondCardView">

        <ImageView
            android:id="@+id/imageViewBackgroundd"
            android:layout_width="270dp"
            android:layout_height="170dp"
            android:background="@color/black"
            android:paddingBottom="20dp"
            android:paddingLeft="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/butonmusic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="294dp"
            android:layout_height="80dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewIsim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="52dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/textViewTelefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="123456789" />

            <ImageView
                android:id="@+id/imageViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="42dp"
                android:src="@drawable/ic_phone"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>