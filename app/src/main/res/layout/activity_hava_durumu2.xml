<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

   <ImageView
        android:id="@+id/imageViewGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/senavideo" />
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="200dp">

            <EditText
                android:id="@+id/editSehir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Şehir adını girin"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnHavaDurumunuGetir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hava Durumu Getir"
                android:textColor="@color/b"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textHavaDurumuBilgisi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:gravity="left"
            android:textColor="@color/b"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingBottom="42dp"
            android:src="@drawable/heart"/>
    </LinearLayout>
</RelativeLayout>
